<table width="100%" border="0">
  <tr>
    <td align="right"><%= link_to 'New administrator', new_admin_admin_path, class: 'btn btn-success btn-sm' %></td>
  </tr>
</table>
<hr>
<h4>Administrators</h4>

<table class="table table-hover">
  <tr>
    <th>Email</th>
    <th>Encrypted Password</th>
    <th></th>
  </tr>

  <% @admins.each do |admin| %>
      <tr>
        <td><%= link_to admin.email, admin_admin_path(admin) %></td>
        <td><%= admin.encrypted_password %></td>
        <td><%= link_to 'Edit', edit_admin_admin_path(admin), class: 'btn btn-warning btn-sm' %> <%= link_to 'Delete', admin_admin_path(admin), :method => :delete, data: { confirm: 'Are you sure you want to delete this administrator?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
  <% end %>
</table>

