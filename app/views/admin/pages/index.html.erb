<%= link_to 'New Page', new_admin_page_path, class: 'btn btn-success btn-sm' %>
<hr>
<h3>Pages</h3>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.title, admin_page_path(page) %></td>
    <td><%= page.slug %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page), class: 'btn btn-warning btn-sm' %></td>
    <td><%= link_to 'Delete', admin_page_path(page), :method => :delete, data: { confirm: 'Are you sure you want to delete this page?' }, class: 'btn btn-danger btn-sm' %></td>
  </tr>
<% end %>
</table>


